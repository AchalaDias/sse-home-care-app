<head>
    <style>
        .vertical-bar {
            border-left: 2px solid #9e8d8d;
            height: 500px;
            margin: 20px 0;
        }
    </style>
</head>

<div style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Column: Login Form -->
            <div style="margin-left: 25%;" class="col-md-6 p-4 border rounded">
                <h2 class="text-center">OTP Verification</h2>
                <% if(errorMsg){ %>
                    <div class="alert alert-danger" role="alert">
                        <%= errorMsg %>
                    </div>
                    <% } %>
                        <form class="px-5 pb-3 d-flex flex-column gap-2" action="/auth/otp" method="post">
                            <div class="form-group">
                                <input type="otp" class="form-control" id="otp" name="otp"
                                    placeholder="Enter your otp">

                                <input type="hidden" name="userId" id="userId" value="<%= userId %>">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block mt-2">Sign In</button>
                        </form>
                        
            </div>
        </div>
    </div>
</div>
</div>