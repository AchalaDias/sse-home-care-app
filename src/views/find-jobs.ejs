<!DOCTYPE html>
<html lang="en">


    <div class="container mt-5">
        <!-- Search Bar -->
        <div class="d-flex justify-content-center mb-4">
            <form action="/user/search-jobs" method="get" class="d-flex" style="width: 60%;">
                <input type="text" name="q" class="form-control" placeholder="Search for jobs..." value="<%= query %>">
                <button type="submit" class="btn btn-primary ms-2">Search</button>
            </form>
        </div>

        <!-- Job Listings -->
        <div class="job-list">
            <% if (jobs.length === 0) { %>
                <p class="text-center">No jobs found matching your search.</p>
            <% } else { %>
                <% jobs.forEach(job => { %>
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <% if (job.images && job.images.length > 0) { %>
                                    <img src="<%= job.images[0] %>" class="img-fluid rounded-start" alt="Job Image">
                                <% } else { %>
                                    <img src="/uploads/default-placeholder.jpg" class="img-fluid rounded-start" alt="Default Image">
                                <% } %>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= job.title %></h5>
                                    <p class="card-text"><%= job.description %></p>
                                    <p class="card-text">
                                        <small class="text-muted">Location: <%= job.location %></small>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">Cost($A): <%= job.cost %></small>
                                    </p>
                                    <a href="/jobs/<%= job._id %>" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

</html>
